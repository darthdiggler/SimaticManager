{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build 32-bit DLL",
            "type": "shell",
            "command": "i686-w64-mingw32-gcc",
            "args": [
              "-m32",
              "-shared",
              "-o",
              "${fileDirname}\\build\\${fileBasenameNoExtension}.dll",
              "${file}",
              "-lole32",
              "-loleaut32",
              "-luuid"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Builds the 32-bit DLL"
          },
          {
            "label": "Build 32-bit EXE",
            "type": "shell",
            "command": "i686-w64-mingw32-gcc",
            "args": [
              "-m32",
              "-o",
              "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
              "${file}",
              "-lole32",
              "-loleaut32",
              "-luuid"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Builds the 32-bit EXE"
          }
    ],
